---
import BaseLayout from '../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';
import SEO from '../components/SEO.astro';

const games = await getCollection('games');
const categories = [
  { id: 'action', name: 'Action Games' },
  { id: 'sports', name: 'Sports Games' },
  { id: 'puzzle', name: 'Puzzle Games' },
  { id: 'popular', name: 'Popular Games' }
];
---

<BaseLayout title="Sitemap - GeoGuessr Free">
  <SEO 
    slot="head"
    title="Sitemap - GeoGuessr Free"
    description="Complete sitemap of GeoGuessr Free. Find all game pages, categories, and information pages in one place."
    keywords="sitemap, site map, all pages, navigation"
  />
  
  <div class="container mx-auto px-4 py-8">
    <h1 class="text-4xl font-bold text-center mb-8 text-gray-900 dark:text-white">Sitemap</h1>
    
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      <!-- Main Pages -->
      <div class="bg-white dark:bg-gray-800 rounded-lg p-6 shadow-lg">
        <h2 class="text-2xl font-bold mb-4 text-gray-900 dark:text-white">Main Pages</h2>
        <ul class="space-y-2">
          <li><a href="/" class="text-blue-600 hover:text-blue-700 dark:text-blue-400">Home</a></li>
          <li><a href="/popular/" class="text-blue-600 hover:text-blue-700 dark:text-blue-400">Popular Games</a></li>
          <li><a href="/categories/" class="text-blue-600 hover:text-blue-700 dark:text-blue-400">All Categories</a></li>
          <li><a href="/search/" class="text-blue-600 hover:text-blue-700 dark:text-blue-400">Search Games</a></li>
        </ul>
      </div>
      
      <!-- Categories -->
      <div class="bg-white dark:bg-gray-800 rounded-lg p-6 shadow-lg">
        <h2 class="text-2xl font-bold mb-4 text-gray-900 dark:text-white">Game Categories</h2>
        <ul class="space-y-2">
          {categories.map(category => (
            <li>
              <a href={`/${category.id}/`} class="text-blue-600 hover:text-blue-700 dark:text-blue-400">
                {category.name}
              </a>
            </li>
          ))}
          <li><a href="/adventure/" class="text-blue-600 hover:text-blue-700 dark:text-blue-400">Adventure Games</a></li>
        </ul>
      </div>
      
      <!-- Information Pages -->
      <div class="bg-white dark:bg-gray-800 rounded-lg p-6 shadow-lg">
        <h2 class="text-2xl font-bold mb-4 text-gray-900 dark:text-white">Information</h2>
        <ul class="space-y-2">
          <li><a href="/about/" class="text-blue-600 hover:text-blue-700 dark:text-blue-400">About Us</a></li>
          <li><a href="/contact/" class="text-blue-600 hover:text-blue-700 dark:text-blue-400">Contact Us</a></li>
          <li><a href="/privacy/" class="text-blue-600 hover:text-blue-700 dark:text-blue-400">Privacy Policy</a></li>
          <li><a href="/terms/" class="text-blue-600 hover:text-blue-700 dark:text-blue-400">Terms of Service</a></li>
          <li><a href="/dmca/" class="text-blue-600 hover:text-blue-700 dark:text-blue-400">DMCA Policy</a></li>
          <li><a href="/cookies/" class="text-blue-600 hover:text-blue-700 dark:text-blue-400">Cookie Policy</a></li>
        </ul>
      </div>
    </div>
    
    <!-- All Games -->
    <div class="mt-12 bg-white dark:bg-gray-800 rounded-lg p-6 shadow-lg">
      <h2 class="text-2xl font-bold mb-6 text-gray-900 dark:text-white">All Games ({games.length})</h2>
      <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-3">
        {games.map(game => (
          <a 
            href={`/games/${game.slug}/`} 
            class="text-sm text-blue-600 hover:text-blue-700 dark:text-blue-400 hover:underline"
          >
            {game.data.title}
          </a>
        ))}
      </div>
    </div>
  </div>
</BaseLayout>