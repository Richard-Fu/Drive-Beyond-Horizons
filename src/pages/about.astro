    <div class="max-w-4xl mx-auto px-4 py-16">
      <!-- Header -->
      <div class="text-center mb-12">
        <h1 class="text-4xl md:text-5xl font-bold text-transparent bg-clip-text bg-gradient-to-r from-green-600 to-blue-600 mb-4">
          About {themeConfig.site.name}
        </h1>
        <p class="text-xl text-gray-600 dark:text-gray-400">
          Your gateway to unlimited gaming adventures
        </p>
      </div>

      <!-- Content Sections -->
      <div class="space-y-12">
        <!-- Our Mission -->
        <section class="bg-white dark:bg-gray-800 rounded-2xl shadow-xl p-8">
