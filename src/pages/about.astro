---
import BaseLayout from '@/layouts/BaseLayout.astro';
import themeConfig from '@/config/theme.config.js';

const pageTitle = `About Us - ${themeConfig.site.name}`;
const pageDescription = `Learn more about ${themeConfig.site.name}, your ultimate destination for free online games. Play instantly without downloads or registration.`;
---

