# Environment Variables for Game Framework Deployment
# Copy this file to .env.local and fill in your values

# Site Configuration
PUBLIC_SITE_URL=https://your-domain.vercel.app
PUBLIC_SITE_NAME="GeoGuessr Free"

# Analytics (Optional)
PUBLIC_GA_ID=G-XXXXXXXXXX
PUBLIC_GTM_ID=GTM-XXXXXXX

# Social Media (Optional)
PUBLIC_FACEBOOK_URL=https://facebook.com/your-page
PUBLIC_TWITTER_URL=https://twitter.com/your-handle
PUBLIC_DISCORD_URL=https://discord.gg/your-server
PUBLIC_YOUTUBE_URL=https://youtube.com/@your-channel

# Development
NODE_ENV=production